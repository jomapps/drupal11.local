# Drupal 11 Production-Ready .gitignore
# Optimized for automated deployment workflows

# =============================================================================
# CORE DRUPAL FILES (Managed by Composer)
# =============================================================================
# Ignore Drupal core - managed by Composer
web/core/

# Ignore Composer dependencies
/vendor/

# Keep composer.lock for consistent deployments
# composer.lock should be committed for production deployments

# =============================================================================
# CONFIGURATION & SENSITIVE FILES
# =============================================================================
# Ignore all settings files except the template
web/sites/*/settings*.php
!web/sites/*/default.settings.php

# Ignore services configuration files
web/sites/*/services*.yml
!web/sites/*/default.services.yml

# Ignore environment-specific configuration
.env
.env.local
.env.*.local

# =============================================================================
# USER-GENERATED CONTENT & CACHE
# =============================================================================
# Ignore user-uploaded files
web/sites/*/files/
web/sites/*/private/

# Ignore Drupal cache directories
web/sites/*/files/php/
web/sites/*/files/css/
web/sites/*/files/js/
web/sites/*/files/styles/
web/sites/*/files/config_*/

# Ignore Twig cache
web/sites/*/files/php/twig/

# Ignore translation files (regenerated)
web/sites/*/files/translations/

# =============================================================================
# DEVELOPMENT & BUILD TOOLS
# =============================================================================
# Node.js dependencies and build artifacts
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.sass-cache/
*.css.map

# Build directories
build/
dist/
web/themes/custom/*/dist/
web/themes/custom/*/build/

# Gulp/Grunt
.gulp/
.grunt/

# Bower
bower_components/

# =============================================================================
# DEVELOPMENT ENVIRONMENT FILES
# =============================================================================
# Local development tools
docker-compose.override.yml
.lando.yml
.ddev/
.vagrant/
Vagrantfile.local

# IDE files
.vscode/
.idea/
*.sublime-project
*.sublime-workspace
*.swp
*.swo
*.iml

# OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

# =============================================================================
# LOGS & TEMPORARY FILES
# =============================================================================
# Log files
*.log
error_log
php_errors.log

# Temporary files
*.tmp
*.temp
*.cache
*~

# Backup files
*.bak
*.backup
*.old
*.orig

# =============================================================================
# DATABASE & MIGRATION FILES
# =============================================================================
# Database dumps (keep these out of version control)
*.sql
*.sql.gz
database/
db_backups/
backup_migrate/

# Local migration and development data
migrate_local/
migration_local/

# =============================================================================
# TESTING & QUALITY ASSURANCE
# =============================================================================
# PHPUnit
.phpunit.result.cache

# Behat
behat.yml
tests/behat/local.yml

# Test results
test-results/
coverage/
.nyc_output/

# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================
# Local configuration overrides
web/sites/development.services.yml
web/sites/local.settings.php
local.settings.php
local.services.yml
settings.local.php
services.local.yml

# Local development files
*.local.*
local.*

# Local scripts and tools
scripts/local/
bin/local/
drush/local.drush.yml
drush/drushrc.local.php

# Local development modules/themes
web/modules/local/
web/themes/local/
web/libraries/local/
web/profiles/local/

# =============================================================================
# DEPLOYMENT & HOSTING PLATFORM FILES
# =============================================================================
# Platform.sh (uncomment if not using)
# .platform/
# .platform.app.yaml

# Acquia (uncomment if not using)
# hooks/
# factory-hooks/

# Pantheon (uncomment if not using)
# pantheon.yml
# pantheon.upstream.yml

# =============================================================================
# SECURITY & CERTIFICATES
# =============================================================================
# SSL certificates and keys
*.pem
*.crt
*.key

# Hash salt files
web/sites/*/salt.txt

# =============================================================================
# PROJECT-SPECIFIC IGNORES
# =============================================================================
# Your project-specific directories
backup/
drupal-entity/
drush-scripts-temp/
exports/

# Temporary development files
$v){
save()

# WAMP/XAMPP specific
.htaccess.bak
php.ini
web/_ini_check.php
web/ini_check.php

# Archive files
*.tar
*.tar.gz
*.zip
*.rar

# Patch files
*.patch
*.diff

# =============================================================================
# DRUPAL CONSOLE & DRUSH
# =============================================================================
.console/

# =============================================================================
# CONFIGURATION MANAGEMENT
# =============================================================================
# Config split directories (adjust based on your setup)
config/local/
config/dev/
config/stage/
# config/prod/  # You might want to track production config

# =============================================================================
# MULTISITE TESTING
# =============================================================================
web/sites/simpletest/
